@{
    ViewData["Title"] = "Cart Page";
}

<h1>Cart</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Option
            </th>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Sub Total
            </th>
            <th style="text-align:right">Total</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.cart != null)
        {
            @foreach (var item in ViewBag.cart)
            {
                <tr>
                    <td>
                        <a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">Remove</a>
                    </td>
                    <td>
                        @item.Product.Id
                    </td>
                    <td>
                        @item.Product.Name
                    </td>
                    <td>
                        @item.Product.Price
                    </td>
                    <td>
                        @item.quantity
                    </td>
                    <td>
                        @(item.Product.Price * item.quantity)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="7" align="right">
                    @ViewBag.total
                </td>
            </tr>
        }
    </tbody>
</table>
</br>
<a asp-controller="productscustomerview" asp-action="index">Continue Shopping</a>
@if (ViewBag.cart != null && ViewBag.total != 0)
{   
    <span>|</span> <a asp-controller="checkout" asp-action="index" asp-route-id="">Proceed to Checkout</a>
}